.page-header
  %h1.pull-left
    %i.icon-cogs
    %span Logs

.row-fluid
  .box-content.box-no-padding
    .responsive-table
      .scrollable-area
        %table.table.table-striped{ :style => "margin-bottom:0;" }
          %thead
            %tr
              %th Area
              %th Level
              %th Date
              %th Message
          %tbody
            - @logs.each do |log|
              %tr
                %td= log.area
                %td= log.level
                %td= log.created_at
                %td= link_to log.message.first(40), log
