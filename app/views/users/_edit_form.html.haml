= form_for @user do |f|
  -if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :email
    = f.text_field :email
  %h3 Roles
  - for role in Role.all
    %div
      = check_box_tag "user[role_ids][]", role.id, @user.roles.include?(role)
      = role.name
  .actions
    = f.submit 'Save'
