- content_for  :title do
  = "#{I18n.t('formtastic.titles.participant_buy')} #{@event.event_type.name}"
.controls
  - unless @nakedform
    .form-wrapper
      %h1.text-center= @event.event_type.name
      %p.text-center
        %i.icon-calendar
        = @event.human_date + " " + @event.human_time + "."
        %br
        %i.icon-map-marker
        = @event.place + ", " + @event.city
      = render 'form'
  - else
    = render 'form'
