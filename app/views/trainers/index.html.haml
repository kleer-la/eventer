.page-header
  %h1.pull-left
    %i.icon-briefcase
    %span Entrenadores
  .pull-right
    %a.btn.btn-white{ :href => new_trainer_path }= t('formtastic.actions.new')

= render '/commons/notice'

.row-fluid
  .span12.box.bordered-box.orange-border{ :style => "margin-bottom:0;" }
    .box-header.orange-background
      .title Entrenadores
    .box-content.box-no-padding
      .responsive-table
        .scrollable-area
          %table.table.table-striped{ :style => "margin-bottom:0;" }
            %thead
              %tr
                %th= t('formtastic.labels.trainer.name')
                %th= t('formtastic.labels.trainer.deleted')
                %th
            %tbody
              - @trainers.each do |trainer|
                %tr
                  %td= link_to trainer.name, trainer
                  %td
                    - if trainer.deleted
                      %i.icon-ban-circle

                  %td
                    .text-right
                      %a.btn.btn-warning.btn-mini{ :href => edit_trainer_path(trainer) }
                        %i.icon-edit
                      -# %a.btn.btn-danger.btn-mini{ :href => trainer_path(trainer), "data-confirm" => "Seguro que lo quieres borrar?", "data-method" => "delete", :rel => "nofollow" }
                      -#   %i.icon-trash
