.page-header
  %h1.pull-left
    %i.icon-bar-chart
    %span
      %a(href='/marketing') Marketing:
      = render partial: '/marketing/time_segment_menu', locals: {top: '/marketing'}

.col-sm-12
  .box.bordered-box.red-border
    .box-header.green-background
      .title Eventos
      .actions
        %a.btn.box-collapse.btn-mini.btn-link
          %i
    .box-content.box-no-padding
      .responsive-table
        .scrollable-area
          %table.table.table-hover.table-striped.data-table
            %thead
              %tr
                %td
                  %strong Evento
                %td
                  %strong Pu/Pr
                %td
                  %strong Inicio
                %td
                  %strong Capacidad
                %td
                  %strong Precio Lista
                %td
                  %strong Moneda
                %td
                  %strong Estado
                %td
                  %strong Participanes
            %tbody
              - @eventos.each do |evento|
                %tr
                  %td= evento.name
                  %td= evento.visibility_type
                  %td= evento.date
                  %td= evento.capacity
                  %td= evento.list_price
                  %td= evento.currency_iso_code
                  %td= evento.status
                  %td= evento.part

.col-sm-12
  = render partial: '/marketing/funnel'

.col-sm-12
  = render partial: '/marketing/campaigns'
