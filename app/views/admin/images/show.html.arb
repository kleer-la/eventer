panel 'Image Details' do
  attributes_table_for image_key do
    row 'Image' do
      if image_url.end_with?('.pdf')
        embed src: image_url, type: "application/pdf", width: "100%", height: "600px"
      else
        image_tag image_url, style: 'max-width: 500px; max-height: 500px;'
      end
    end
    
    row 'Bucket' do
      image_bucket
    end
    
    row 'Key' do
      image_key
    end
    
    row 'URL' do
      div class: 'url-container' do
        span image_url
        button 'Copy URL', class: 'copy-button', onclick: "copyText('#{image_url}')"
      end
    end

    row 'Markdown' do
      markdown = "![alt text](#{image_url} \"Title\")"
      div class: 'url-container' do
        span markdown
        button 'Copy Markdown', class: 'copy-button', onclick: "copyText('#{markdown}')"
      end
    end
  end
end

div class: 'actions' do
  span class: 'action_item' do
    link_to 'Back to Images', admin_images_path(bucket: image_bucket), class: 'button'
  end
end

# Add styles
div class: 'panel' do
  style <<~CSS
    .url-container {
      display: flex;
      align-items: center;
      gap: 1em;
    }
    .copy-button {
      padding: 5px 10px;
      background: #6a7;
      color: white;
      border: none;
      border-radius: 3px;
      cursor: pointer;
    }
    .copy-button:hover {
      background: #5b6;
    }
  CSS
end

# Add JavaScript
script do
  raw <<~JAVASCRIPT
    function copyText(text) {
      navigator.clipboard.writeText(text).then(function() {
        const button = event.target;
        const originalText = button.innerText;
        button.innerText = 'Copied!';
        setTimeout(() => {
          button.innerText = originalText;
        }, 2000);
      });
    }
  JAVASCRIPT
end