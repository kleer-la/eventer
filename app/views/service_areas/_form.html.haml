= semantic_form_for @service_area do |f|
  = f.inputs do
    = f.input :name
    = f.input :visible, as: :boolean
    = f.input :lang, as: :select, collection: ServiceArea.langs.keys.map { |k| [k.humanize, k] }
    = f.rich_text_area  :abstract
    .field
      = f.label :icon
      = f.url_field :icon
    .field
      = f.label :primary_color
      = f.color_field  :primary_color, style: 'block-size: 40px;'
    .field
      = f.label :secondary_color
      = f.color_field  :secondary_color, style: 'block-size: 40px;'
    = f.action :submit, :as => :input
