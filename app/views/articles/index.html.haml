.page-header
  %h1.pull-left
    %i.icon-file
    %span Articles
  .pull-right
    %a.btn.btn-white{ :href => new_article_path }= t('formtastic.actions.new')

.row-fluid
  .box-content.box-no-padding
    .responsive-table
      .scrollable-area
        %table.table.table-striped{ :style => "margin-bottom:0;" }
          %thead
            %tr
              %th Title
              %th Slug
              %th Updated
              %th Published
              %th

          %tbody
            - @articles.each do |article|
              %tr
                %td= link_to article.title, edit_article_path(article)
                %td= article.slug
                %td= article.updated_at
                %td
                  -if article.published
                    %i.icon-play.text-success{ :alr => 'publicado'}
                  -else
                    %i.icon-pause.text-warning{ :alr => 'sin publicar'}
                %td
                  .text-right
                    %a.btn.btn-warning.btn-mini{ :href => edit_article_path(article) }
                      %i.icon-edit
                    %a.btn.btn-danger.btn-mini{ :href => articles_path(article), "data-confirm" => "Seguro que lo quieres borrar?", "data-method" => "delete", :rel => "nofollow" }
                      %i.icon-trash
